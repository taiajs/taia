{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "lint": "npm run lint:js && npm run tsc",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages",
    "lint:js": "eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages",
    "prepare": "husky install",
    "publish": "pnpm build & lerna publish",
    "republish": "lerna publish from-git",
    "test": "jest",
    "tsc": "tsc --noEmit",
    "turbo:clean": "rimraf ./node_modules/.cache/turbo"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "packages/*/package.json": [
      "npx sort-package-json"
    ],
    "./package.json": [
      "npx sort-package-json"
    ]
  },
  "devDependencies": {
    "@txpjs/qa": "workspace:1.0.0-alpha.0",
    "eslint": "^7.11.0",
    "esno": "^0.16.3",
    "father": "^4.0.0-rc.4",
    "husky": "^8.0.0",
    "jest": "^28.1.3",
    "lerna": "^5.1.7",
    "lint-staged": "^13.0.3",
    "prettier": "^2.3.2",
    "ts-node": "^10.9.1",
    "turbo": "^1.3.1",
    "typescript": "^4.5.4",
    "zx": "^4.3.0"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
