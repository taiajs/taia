{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx  ./packages ",
    "lint:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./packages",
    "prepare": "husky install",
    "prettier": "prettier --write .",
    "publish": "pnpm build & lerna publish",
    "republish": "lerna publish from-git",
    "sort": "turbo run sort",
    "sort1": "npx sort-package-json",
    "test": "jest",
    "turbo:clean": "rimraf ./node_modules/.cache/turbo"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ],
    "packages/**/*.json": [
      "npx sort-package-json"
    ]
  },
  "devDependencies": {
    "@txpjs/qa": "workspace:^1.0.0",
    "esno": "^0.16.3",
    "father": "^4.0.0-rc.4",
    "husky": "^8.0.0",
    "lerna": "^5.1.7",
    "lint-staged": "^13.0.3",
    "ts-node": "^10.9.1",
    "turbo": "^1.3.1",
    "zx": "^4.3.0"
  },
  "packageManager": "pnpm@7.3.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  }
}
